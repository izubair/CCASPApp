<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ClarkConnect</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script type="text/javascript" src="~/Scripts/Books.js"></script>

    <script src="../Scripts/WSFuncCalls.js"></script>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyD9HKIXx1xm4_VIY-_oXY5EhYXZjHhnkz8"></script>
    
    <link rel="stylesheet" href="~/Content/BootSideMenu.css">
    <style>
        html {
            height: 100%;
            width: 100%
        }

        body {
            height: 100%;
            width: 100%
        }

        #map-container {
            height: 80%
        }

        .column {
            float: left;
        }

        .left {
            width: 25%;
        }

        .right {
            width: 75%;
        }


        /* Style the tab */
        div.tab {
            overflow: hidden;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
        }

            /* Style the buttons inside the tab */
            div.tab button {
                background-color: inherit;
                float: left;
                border: none;
                outline: none;
                cursor: pointer;
                padding: 5px 10px;
                transition: 0.3s;
                width: 33.3%
            }

                /* Change background color of buttons on hover */
                div.tab button:hover {
                    background-color: #ddd;
                }

                /* Create an active/current tablink class */
                div.tab button.active {
                    background-color: #ccc;
                }

        /* Style the tab content */
        .tabcontent {
            display: none;
            padding: 6px 12px;
            border: 1px solid #ccc;
            border-top: none;
        }

        #ResultText, #Result1Text, #Result2Text {
            width: 100%;
            height: 150px;
            border: 1px solid #ddd;
            padding: 5px;
            background-color: Lavender;
        }

        #crossstreet2Label {
            padding-top: 10px;
        }

        .user-input {
            width: 100%;
        }

        #footer {
            background-color: black;
            text-align: center;
            position: fixed;
            bottom: 0;
            right: 0;
            left: 0;
        }
        

        @@media (max-width:2600px) {
            .img-mainlinks {
                max-width: 100%;
                max-height: 100%;
            }
            .footer-p {
                color: white;
                padding-top: 10px;
                font-size: medium;
            }
        }

        @@media (max-width:450px) {
            .img-mainlinks {
                max-width: 140px;
                max-height: 140px;
            }
            .footer-p {
                color: white;
                padding-top: 10px;
                font-size: medium;
            }
        }

        @@media (max-width:413px) {
            .img-mainlinks {
                max-width: 100px;
                max-height: 100px;
            }
            .footer-p {
                color: white;
                padding-top: 10px;
                font-size: small;
            }
        }

        @@media (max-width:325px) {
            .img-mainlinks {
                max-width: 80px;
                max-height: 80px;
            }
            .footer-p {
                color: white;
                padding-top: 5px;                
                font-size: 10px;
            }
        }

    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>                
                <!--
                <b>@Html.ActionLink("ClarkConnect", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</b>
                -->
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Top 5 Categories", "Top5Catg", "Home")</li>
                    <li>@Html.ActionLink("Last 5 Requests", "Last5Requests", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer id="footer">
            <p class="footer-p">If this is a life-threatening emergency, please dial 911.</p>
            <div class="row">
                <div class="col">
                    <a href="https://www.facebook.com/ClarkCountyNV">
                        <img border="0" alt="Facebook" src="@Url.Content("~/content/facebook.png")" width="25" height="25">

                        <a href="https://www.linkedin.com/company/clark-county">
                            <img border="0" alt="LinkedIn" src="@Url.Content("~/content/linkedin.png")" width="25" height="25">
                        <a href="https://twitter.com/ClarkCountyNV">
                                <img border="0" alt="Twitter" src="@Url.Content("~/content/twitter.png")" width="25" height="25">
                        <a href="http://www.youtube.com/user/ClarkCountyNV">
                                <img border="0" alt="YouTube" src="@Url.Content("~/content/youtube.png")" width="25" height="25">
              </div>               
            </div>
            <div class="row">
                <p class="footer-p">&copy; @DateTime.Now.Year - Clark County</p>
            </div>
</footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!--WE WANT TO RUN THIS SCRIPT ON PAGE LOAD SO PUTTING IT HERE INSTEAD OF IN THE head-->
    <script src="~/Scripts/BootSideMenu.js"></script>
</body>
</html>
